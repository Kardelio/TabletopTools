<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/menu_dices">
        <ListPreference
                android:key="default_tab"
                android:title="@string/default_tab_title"
                android:entryValues="@array/tabs"
                android:entries="@array/tabs"
                android:defaultValue="@string/menu_dices"
                android:summary="%s" />
        <ListPreference
                android:key="dices_max_count"
                android:title="@string/dices_max_count"
                android:entryValues="@array/dices_count"
                android:entries="@array/dices_count"
                android:defaultValue="10"
                android:summary="%s" />
        <SwitchPreference
                android:key="dices_show_inc_slider"
                android:title="@string/dices_show_inc_slider"
                android:defaultValue="false" />
    </PreferenceCategory>
</PreferenceScreen>